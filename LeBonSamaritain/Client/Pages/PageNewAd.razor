@page "/PageNewAd"

<style>
    body {
        background-image: url(https://media.istockphoto.com/photos/modern-classroom-interior-design-3d-render-picture-id1056658924?k=6&m=1056658924&s=170667a&w=0&h=JtTOJVmVSz9lcFWbsbK24pnUUtQktCl0qFffq_p0HqA=);
        background-repeat: no-repeat;
        background-size: cover;
        background-attachment: fixed;
    }
</style>

<body>

    <div class="mt-4 mb-3 text-white text-center">
        <h1>Nouvelle Annonce</h1>
    </div>
    <div class="NewAdBlock">

        @*<EditForm Model="@newAd" OnValidSubmit="CreateNewAd">
            <div class="form-group">
                <label for="title">Type d'Annonce :</label>
            </div>
        </EditForm>*@

            <div class="d-flex justify-content-start ml-3">
                <div class="d-flex flex-column bd-highlight mb-3 ml-1">

                    <div class="p-2 bd-highlight mt-3">
                        <h3>
                            Type d'Annonce :
                        </h3>
                    </div>

                    <div class="p-2 bd-highlight mt-5">
                        <h3>
                            Objet :
                        </h3>
                    </div>

                    <div class="p-2 bd-highlight mt-5">
                        <h3>
                            Prix :
                        </h3>
                    </div>

                    <div class="p-2 bd-highlight mt-5">
                        <h3>
                            Description de l'objet :
                        </h3>
                    </div>

                    <div class="p-2 bd-highlight mt-5">
                        <h3>
                            Etat :
                        </h3>
                    </div>

                    <div class="p-2 bd-highlight mt-5">
                        <h3>
                            Mode d'Envoi :
                        </h3>
                    </div>
                </div>


                <div class="d-flex justify-content-start ml-3">
                    <div class="d-flex flex-column bd-highlight mb-3 ml-1">
                        <div class="p-2 bd-highlight mt-3">
                            <div class="d-flex justify-content-around">
                                <button type="button" class="ml-3 mr-3 btn btn-primary">Vente</button>
                                <button type="button" class="ml-3 mr-3 btn btn-primary">Don</button>
                                <button type="button" class="ml-3 mr-3 btn btn-primary">Prêt</button>
                            </div>
                        </div>

                        <div class="p-2 bd-highlight mt-5">
                            <h3>
                                <input type="text" placeholder="Ex : 300 Chaises" />
                            </h3>
                        </div>

                        <div class="p-2 bd-highlight mt-5">
                            <h3>
                                <input type="text" placeholder="Ex : 1500€" />
                            </h3>
                        </div>

                        <div class="p-2 bd-highlight mt-5">
                            <h3>
                                <input type="text" placeholder="Ex : Chaise rouge et jaune" />
                            </h3>
                        </div>

                        <div class="p-2 bd-highlight mt-5">
                            <h3>
                                <input type="text" placeholder="Ex : En bonne état" />
                            </h3>
                        </div>

                        <div class="p-2 bd-highlight mt-5">
                            <h3>
                                <input type="text" placeholder="Ex : A Discuter" />
                            </h3>
                        </div>
                    </div>
                </div>


                <div class="d-flex justify-content-end">
                    <div class="d-flex flex-column bd-highlight mb-3 ml-5">
                        <div class="p-2 bd-highlight mt-3">
                            <h3 class="text-center">
                                Photo :
                            </h3>
                        </div>

                        <div class="p-2 bd-highlight mt-5">
                            <div>
                                <img src="https://png.pngtree.com/png-vector/20190802/ourlarge/pngtree-camera-image-basic-ui-flat-color-icon-vector-icon-png-image_1645797.jpg" width="400" />
                            </div>
                        </div>

                        <div class="p-2 bd-highlight mt-5">
                            <button type="button" class="btn btn-primary">Publier l'annonce</button>
                        </div>

                    </div>
                </div>


            </div>
    </div>
</body>

